{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "ES2022",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "target": "ES6",
        "lib": [
            "ES2021",
            "DOM"
        ],
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "./src/scripts/**/*"
    ]
}
